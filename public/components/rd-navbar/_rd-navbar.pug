include _navbar-navigation
include ../alert/_alert

mixin rd-navbar
	//RD Navbar
	.rd-navbar-wrap
		nav.rd-navbar
			.navbar-panel
				.navbar-panel-inner
					.navbar-panel-cell.flex-grow-1
						#navbar-search.navbar-search 
							input.navbar-search-input( type='text', placeholder='Search' ) 

					.navbar-panel-cell.navbar-toggle-search-cell 
						button.navbar-toggle.navbar-toggle-search.mdi-magnify(
							title='Search',
							data-multi-switch!= {
								targets: '.navbar-panel', 
								scope: '#navbar-search',
								isolate: '[data-multi-switch]'
							}
						)

					.navbar-panel-cell
						button.navbar-toggle.linearicons-menu(
							title='Sidebar',
							data-sidebar-switch,
							data-multi-switch!= {
								targets: '.sidebar',
								scope:   '.sidebar, [data-sidebar-switch]',
								isolate: '[data-multi-switch]:not([data-sidebar-switch])'
							}
						)

					.navbar-panel-cell
						button.navbar-toggle.linearicons-envelope(
							title='Chat',
							data-multi-switch!= {
								targets: '#subpanel-chat',
								scope: '#subpanel-chat',
								isolate: '[data-multi-switch]'
							}
						)

						#subpanel-chat.navbar-subpanel
							include _navbar-chat-widget

					.navbar-panel-cell
						button.navbar-toggle.linearicons-alarm(
							title='Notifications',
							data-multi-switch!= {
								targets: '#subpanel-notifications',
								scope: '#subpanel-notifications',
								isolate: '[data-multi-switch]'
							}
						)

						.navbar-badge.badge.badge-danger.badge-pill 1

						#subpanel-notifications.navbar-subpanel 
							include _navbar-notifications-widget

					.navbar-panel-cell
						.navbar-toggle.navbar-user(
							title='User Menu',
							data-multi-switch!= {
								targets: '#subpanel-user-menu',
								scope: '#subpanel-user-menu',
								isolate: '[data-multi-switch]'
							}
						)
							img.rounded( src='images/users/user-09-60x60.jpg', alt='' )

						#subpanel-user-menu.navbar-subpanel
							include _navbar-user-widget

			.navbar-sidebar-wrap
				.navbar-sidebar-panel
					button.navbar-toggle-sidebar.linearicons-menu( data-navigation-switch )
					.navbar-logo
						a.navbar-logo-link( href= homePage.link )
							img.navbar-logo-default( src= logo.default, width='136', alt= logo.name )

				.navbar-sidebar.scroller.scroller-vertical
					+navigation( menu )
